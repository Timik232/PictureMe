<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/ava"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ava"
        android:background="@drawable/round_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Кирилл Евдокимов"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ava"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:scaleType="centerCrop"
        android:src="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/rate"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_text"
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:paddingStart="12dp"
        android:layout_marginBottom="10dp"
        android:text="Placeholderplacegikdeplaceholder placegoledr"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ava"
        app:layout_constraintTop_toBottomOf="@id/fio" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="1550₽"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person_text" />

    <Button
        android:id="@+id/open"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:background="@drawable/rounded_button"
        android:text="@string/openPortfolio"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cost"
        app:layout_constraintTop_toBottomOf="@id/person_text" />


</androidx.constraintlayout.widget.ConstraintLayout>