<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/person_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="350dp"
        android:paddingStart="12dp"
        android:gravity="start"
        android:text="Сообщение Сообщение Сообщение Сообщение СообщениеСообщение Сообщение Сообщение"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/person_time"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:gravity="bottom"
        android:paddingStart="2dp"
        android:text="11:00"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/person_text"
        app:layout_constraintBottom_toBottomOf="@id/person_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>